# ==========================================
# VARIABLES DE TU APLICACIÓN NODE.JS
# ==========================================
DB_NAME=sanidad
DB_HOST=db
DB_USER=sanidad_user
DB_PASSWORD=test
DB_PORT=3306
PORT=3001
SECRET_KEY=default_secret
NODE_ENV=development

# ==========================================
# VARIABLES PARA CREAR EL CONTENEDOR MYSQL
# ==========================================
# Nota: Estos valores deben coincidir con los de tu app arriba para que Node se pueda conectar
MYSQL_DATABASE=sanidad
MYSQL_USER=sanidad_user
MYSQL_PASSWORD=test
MYSQL_ROOT_PASSWORD=test

# ==========================================
# CONFIGURACIÓN PHPMYADMIN
# ==========================================
PMA_HOST=db
PMA_USER=root
PMA_PASSWORD=test

# ==========================================
# CONFIGURACIÓN DE PUERTOS
# ==========================================
EXPRESS_PORT=3001
MYSQL_PORT=3306
PHPMYADMIN_PORT=8080

# ==========================================
# CONFIGURACIÓN PHP (PARA PHPMYADMIN)
# ==========================================
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=30
PHP_UPLOAD_MAX_FILESIZE=20M
PHP_POST_MAX_SIZE=20M

